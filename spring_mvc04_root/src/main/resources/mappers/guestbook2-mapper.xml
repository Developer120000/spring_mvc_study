<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="guestbook2">
	<select id="list" resultType="g2vo">
 		select * from guestbook2 order by idx
 	</select>
 	<!-- <insert id="insert" parameterType="gvo">
 		insert into guestbook(idx,name,subject,content,email,pwd,regdate)
 		values(guestbook_seq.nextval, #{name},#{subject},#{content},#{email},#{pwd},sysdate)
 	</insert> -->
 	<insert id="insert" parameterType="g2vo">
 		insert into guestbook2(name,subject,content,email,pwd,regdate)
 		values( #{name},#{subject},#{content},#{email},#{pwd},sysdate())
 	</insert>
 	<select id="detail" parameterType="String" resultType="g2vo">
 		select * from guestbook2 where idx = #{idx}
 	</select>
 	<delete id="delete" parameterType="String">
 		delete from guestbook2 where idx = #{idx}
 	</delete>
 	<update id="update" parameterType="g2vo">
 		update guestbook2
 		set name=#{name}, subject=#{subject}, email=#{email}, content=#{content}
 		where idx = #{idx}
 	</update>
 </mapper>
